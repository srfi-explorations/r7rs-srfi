ARG SCHEME=chibi
ARG IMAGE=chibi:head
FROM schemers/${IMAGE}
RUN apt-get update && apt-get install \
    --no-install-recommends \
    --no-install-suggests \
    -y \
    gcc \
    libc6-dev \
    git \
    ca-certificates \
    make \
    libffi-dev \
    pandoc \
    time \
    bc
RUN mkdir -p ${HOME}/.snow && echo "()" > ${HOME}/.snow/config.scm
RUN git clone https://github.com/Retropikzel/chibi-scheme.git --depth=1 --branch=snow-chibi-chicken-static
RUN cd chibi-scheme && make -j 32 && make -j 32 install
ENV PATH=/opt/compile-r7rs/bin:${PATH}
ARG SCHEME=chibi
ENV COMPILE_R7RS=${SCHEME}
ENV GUILE_AUTO_COMPILE=0
ENV STKLOS_FRAMES=1000
RUN snow-chibi --impls=${SCHEME} --always-yes install "(r6rs bytevectors)"
COPY --from=retropikzel1/compile-r7rs /opt/compile-r7rs /opt/compile-r7rs

