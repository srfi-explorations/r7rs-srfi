ARG SCHEME=chibi
FROM debian:bookworm AS build
RUN apt-get update && apt-get install -y \
    ca-certificates \
    git \
    make \
    build-essential \
    pandoc
RUN git clone https://github.com/ashinn/chibi-scheme.git --depth=1
RUN cd chibi-scheme && make -j 32

ARG SCHEME=chibi
FROM schemers/${SCHEME}:head
RUN apt-get update && apt-get install -y \
    build-essential \
    libffi-dev \
    make \
    ca-certificates \
    git
RUN mkdir ${HOME}/.snow && echo "()" > ${HOME}/.snow/config.scm
COPY --from=build /chibi-scheme /chibi-scheme
RUN cd /chibi-scheme && make -j 32 install
COPY --from=retropikzel1/compile-r7rs /opt/compile-r7rs /opt/compile-r7rs
ENV PATH=/opt/compile-r7rs/bin:${PATH}
ARG SCHEME=chibi
ARG SCHEME=${SCHEME}
ENV COMPILE_R7RS=${SCHEME}


