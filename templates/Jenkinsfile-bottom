
        stage("Report") {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    unstash 'reports'
                    sh './report'
                    archiveArtifacts artifacts: 'reports/*.html'
                }
            }
        }

    }
    post {
        always {
            deleteDir()
            archiveArtifacts artifacts: 'reports/*.log'
        }
        failure {
            deleteDir()
            archiveArtifacts artifacts: 'reports/*.html'
            archiveArtifacts artifacts: 'reports/*.log'
        }
    }
}
