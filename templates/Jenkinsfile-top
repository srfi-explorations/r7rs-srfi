pipeline {

    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
    }

    parameters {
        choice(name: 'BUILD_IMPLEMENTATION',
               description: 'Build',
               choices: [
                 'all',
                 'chibi',
                 'chicken-compiler',
                 'chicken-interpreter',
                 'cyclone-compiler',
                 'cyclone-interpreter',
                 'foment',
                 'gambit-compiler',
                 'gambit-interpreter',
                 'gauche',
                 'gerbil-compiler',
                 'gerbil-interpreter',
                 'guile',
                 'kawa',
                 'larceny',
                 'loko-compiler',
                 'mit-scheme',
                 'sagittarius',
                 'stklos',
                 'skint',
                 'tr7',
                 'ypsilon',
               ])
    }

    stages {

        stage("Init") {
            steps {
                sh 'sh jenkins_scripts/init.sh'
                stash name: 'reports', includes: 'reports/*'
                stash name: 'tests', includes: 'srfi-test/*'
            }
        }
